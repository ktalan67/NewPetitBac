{% extends 'base.html.twig' %}

{% block title %}Feuille index{% endblock %}

{% block body %}
    <h1>Parties jou√©es/en cours</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id/Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for game in user.games %}
            <tr>
                <td>{{ game.id }}/{{ game.nom }}</td>
                <td>
                    <a href="{{ path('game_show', {'id': game.id}) }}">show</a>
                    <a href="{{ path('game_edit', {'id': game.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="2">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}