{% extends 'base.html.twig' %}

{% block title %}Feuille index{% endblock %}

{% block body %}
    <h1>Feuille {{ feuille.id }}</h1>Feuille à {{ feuille.user.username }} {{ feuille.user.id }}

<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
        {% for question in feuille.questions %}
      <th scope="col">{{ question.title }}</th>
        {% endfor %}
    </tr>
  </thead>
  <tbody>
    <tr>
      <td scope="row">Réponses</td>
      <td id="{{ feuille.user.id }}-reponse1">{{ feuille.reponse1 }} <input type="checkbox" id="{{ feuille.user.id }}-reponse1" name="reponse" value="1">+1</td> 
      <td id="{{ feuille.user.id }}-reponse2">{{ feuille.reponse2 }} <input type="checkbox" id="{{ feuille.user.id }}-reponse2" name="reponse" value="1">+1</td> 
      <td id="{{ feuille.user.id }}-reponse3">{{ feuille.reponse3 }} <input type="checkbox" id="{{ feuille.user.id }}-reponse3" name="reponse" value="1">+1</td> 
      <td id="{{ feuille.user.id }}-reponse4">{{ feuille.reponse4 }} <input type="checkbox" id="{{ feuille.user.id }}-reponse4" name="reponse" value="1">+1</td> 
      <td id="{{ feuille.user.id }}-reponse5">{{ feuille.reponse5 }} <input type="checkbox" id="{{ feuille.user.id }}-reponse5" name="reponse" value="1">+1</td> 
      <td id="{{ feuille.user.id }}-reponse6">{{ feuille.reponse6 }} <input type="checkbox" id="{{ feuille.user.id }}-reponse6" name="reponse" value="1">+1 </td> 
      <td id="{{ feuille.user.id }}-reponse7">{{ feuille.reponse7 }} <input type="checkbox" id="{{ feuille.user.id }}-reponse7" name="reponse" value="1">+1</td> 
    </tr>
  </tbody>
</table>
<button class="btn">{{ button_label|default('Save') }}</button>
{% endblock %}