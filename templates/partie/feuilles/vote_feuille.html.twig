{% extends 'base.html.twig' %}

{% block title %}Feuille index{% endblock %}

{% block body %}
    <h1>Feuille {{ feuille.id }}</h1>Feuille à {{ feuille.user.username }} {{ feuille.user.id }}
{{ form_start(form) }}
{{ form_start(form2) }}
<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
        {% for question in feuille.questions %}
      <th scope="col">{{ question.title }}</th>
        {% endfor %}
    </tr>
  </thead>
  <tbody>
    <tr>
      <td scope="row">Réponses</td>
      <td id="{{ feuille.user.id }}-reponse1">{{ feuille.reponse1 }} // {{ feuille.reponse1comment }}
      {{ form_widget(form.reponse_1_score) }}
      {{ form_widget(form2.vote_1_comment) }}
      </td> 
      <td id="{{ feuille.user.id }}-reponse2">{{ feuille.reponse2 }} // {{ feuille.reponse2comment }}
      {{ form_widget(form.reponse_2_score) }}
      {{ form_widget(form2.vote_2_comment) }}
      </td> 
      <td id="{{ feuille.user.id }}-reponse3">{{ feuille.reponse3 }} // {{ feuille.reponse3comment }}
      {{ form_widget(form.reponse_3_score) }}
      {{ form_widget(form2.vote_3_comment) }}
      </td> 
      <td id="{{ feuille.user.id }}-reponse4">{{ feuille.reponse4 }} // {{ feuille.reponse4comment }}
      {{ form_widget(form.reponse_4_score) }}
      {{ form_widget(form2.vote_4_comment) }}
      </td> 
      <td id="{{ feuille.user.id }}-reponse5">{{ feuille.reponse5 }} // {{ feuille.reponse5comment }}
      {{ form_widget(form.reponse_5_score) }}
      {{ form_widget(form2.vote_5_comment) }}
      </td> 
      <td id="{{ feuille.user.id }}-reponse6">{{ feuille.reponse6 }} // {{ feuille.reponse6comment }}
      {{ form_widget(form.reponse_6_score) }}
      {{ form_widget(form2.vote_6_comment) }}
      </td> 
      <td id="{{ feuille.user.id }}-reponse7">{{ feuille.reponse7 }} // {{ feuille.reponse7comment }}
      {{ form_widget(form.reponse_7_score) }}
      {{ form_widget(form2.vote_7_comment) }}
      </td> 
    </tr>
  </tbody>
</table>
<button class="btn">{{ button_label|default('Save') }}</button>
  {{ form_end(form) }}
  {{ form_end(form2) }}
{% endblock %}