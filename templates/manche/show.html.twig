{% extends 'base.html.twig' %}

{% block title %}Manche{% endblock %}

{% block body %}
    <h1>Manche</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ manche.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ manche.nom }}</td>
            </tr>
            <tr>
                <th>Temps</th>
                <td>{{ manche.temps }}</td>
            </tr>
        </tbody>
    </table>

    <table class="table">
        <thead>
            <tr>
                <th>Questions</th>
            </tr>
        </thead>
        <tbody> 
            <tr>                
                {% for question in manche.questions %}
                <td>{{ question.title }}</td>
                {% endfor %}
            </tr>
        </tbody>
    </table>

    <table class="table">
        <thead>
            <tr>
                <th>Users</th>
            </tr>
        </thead>
        <tbody>
                <tr>                
                {% for user in manche.users %}
                <td>{{ user.username }}</td>
                {% endfor %}
            </tr>  
        </tbody>
    </table>

    <a href="{{ path('manche_index') }}">back to list</a>

    <a href="{{ path('manche_edit', {'id': manche.id}) }}">edit</a>

    {{ include('manche/_delete_form.html.twig') }}
{% endblock %}
